{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "http://localhost:3000/schema/definitions/personal-info",
    "x-uri": "/personal-info",
    "title": "Who are you?",
    "description": "Tell us about yourself",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string",
            "title": "First name",
            "pattern": "^(?!\\s*$).+",
            "errorMessages": {
                "required": "Enter your first name"
            }
        },
        "lastName": {
            "type": "string",
            "title": "Last name",
            "pattern": "^(?!\\s*$).+",
            "errorMessages": {
                "required": "Enter your last name"
            }
        },
        "age": {
            "type": "integer",
            "title": "Age",
            "minimum": 18,
            "exclusiveMinimum": true
        },
        "bio": {
            "type": "string",
            "title": "Bio",
            "maxLength": 2000
        },
        "favouriteCheese": {
            "type": "string",
            "title": "Favourite cheese",
            "minLength": 5
        }
    },
    "required": ["firstName", "lastName"],
    "rules": {
        "firstName": ["<", 1, 4]
    },
    "routes": []
}
